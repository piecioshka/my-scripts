#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$script_dir/../shared/__shared.sh"

command="${1}"

if [ -z "$command" ]; then
  echo "Usage: $(basename $0) <command>"
  exit 1
fi

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$script_dir/__colors.sh"

for d in ./*/
do
  if [ -d "$d" ]; then
    cd "$d"
    __print_command_and_eval "$command"
    cd ".."
  fi
done
